{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/colmr/vis_class/master/London2012Vega.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "filter": "datum.Weight > 0"
    },
    {
      "filter": "datum.Height > 0"
    },
    {
      "calculate": "datum.Weight / (datum.Height / 100 * datum.Height / 100)", "as": "BMI"
    }
  ],
  "repeat": {"row": ["Weight", "Height", "BMI"]},

  "spec":{
    "mark": "bar",
    "encoding": {
        "column":{"field":"Sex", "type":"nominal"},
        "y": {
        "field": "Sport",
        "type":"nominal",
        "sort": {
          "op":"mean",
          "field": {"repeat": "row"},
          "order": "descending"}
        },
        "x": {
          "field": {"repeat":"row"},
          "type": "quantitative",
          "aggregate": "mean"
        },
        "color":{"field":"Sex", "type": "nominal",
            "scale": {"domain":["F", "M"], 
                      "range":["#8101FA", "#00C7A9"]}
        }
    }
  }
}
